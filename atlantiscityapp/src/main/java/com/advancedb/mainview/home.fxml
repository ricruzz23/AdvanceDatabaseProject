<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Separator?>

<BorderPane
	fx:controller="com.advancedb.mainview.HomeController" xmlns:fx="http://javafx.com/fxml/1">
	<center>
		<VBox spacing="20" alignment="CENTER">
			<Separator orientation="HORIZONTAL" />
			<HBox spacing="20" alignment="CENTER">
				<padding>
						<Insets bottom="20" left="20" top="20" right="20" />
				</padding>
				<VBox spacing="20">
					<Button text="Add New Customer" minWidth="200" id="Button" onAction="#goToAddCustomerScene" />
					<Button text="Manage Customers" minWidth="200" id="Button" onAction="#goToManageCustomerScene" />
				</VBox>
				<Separator orientation="VERTICAL" />
				<VBox spacing="20">
					<Button text="Shoes Check-In \ Check-Out" minWidth="200"/>
				
				</VBox>
				<Separator orientation="VERTICAL" />
				<VBox spacing="20">
					<Button text="Add Shoe To Inventory" minWidth="200" id="Button" onAction="#goToAddInventoryScene"/>
					<Button text="Manage Shoes" minWidth="200" id="Button" />
				</VBox>
			</HBox>
			<Separator orientation="HORIZONTAL" />
			<Button text="Exit" minWidth="200" id="Button" onAction="#exitSystem" />
		</VBox>
		</center>
</BorderPane>

