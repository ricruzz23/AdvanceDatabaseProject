	<center>
		<VBox spacing="20">
		<padding>
				<Insets bottom="20" left="20" top="20" right="20" />
		</padding>
			<Button text="Add New Customer" minWidth="200" id="Button" onAction="#goToMainScene" />
			<Button text="Add Shoe To Inventory" minWidth="200"/>
			<Button text="Shoes Check-In \ Check-Out" minWidth="200"/>
			<Button text="Exit" minWidth="200" id="Button" onAction="#exitSystem" />
		</VBox>
	</center>
</BorderPane>

